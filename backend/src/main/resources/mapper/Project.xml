<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="base.model.act.mapper.ProjectMapper">
    <resultMap id="BaseResultMap" type="base.model.act.pojo.Project">
        <!--@mbg.generated-->
        <!--@Table projects-->
        <result column="id" jdbcType="INTEGER" property="id"/>
        <result column="project_name" jdbcType="VARCHAR" property="projectName"/>
        <result column="create_by" jdbcType="INTEGER" property="createBy"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_by" jdbcType="INTEGER" property="updateBy"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
        <result column="roles" jdbcType="VARCHAR" property="roles"
                typeHandler="org.apache.ibatis.type.EnumTypeHandler"/>
    </resultMap>
    <sql id="Base_Column_List">
        <!--@mbg.generated-->
        id,
        project_name,
        create_by,
        create_time,
        update_by,
        update_time,
        roles
    </sql>

    <select id="queryProject" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from projects p
                 inner join project_user u on p.id = u.project_id
        where u.user_id = #{userID}
    </select>
</mapper>